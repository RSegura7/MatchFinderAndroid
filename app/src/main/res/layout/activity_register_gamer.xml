<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterGamerActivity"
    tools:layout_editor_absoluteY="81dp"
    android:background="@drawable/background">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MatchFinder"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:textSize="50dp"
            android:textStyle="bold"
            android:gravity="center"/>
        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese Nombre"
            android:inputType="textPersonName"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:background="@drawable/inputs"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="67dp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese Apellidos"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:background="@drawable/inputs"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="104dp" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese correo"
            android:inputType="textEmailAddress"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:background="@drawable/inputs"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="230dp" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese telefono"
            android:inputType="phone"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:background="@drawable/inputs"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="266dp" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese nombre de usuario"
            android:inputType="textPersonName"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:background="@drawable/inputs"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="304dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sexo:"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="188dp" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_marginBottom="20dp"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="170dp">

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Masculino" />

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Femenino" />
        </RadioGroup>

        <EditText
            android:id="@+id/editText8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese contraseÃ±a"
            android:inputType="textPassword"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:background="@drawable/inputs"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="340dp" />

        <TextView
            android:id="@+id/efecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese fecha de nacimiento"
            android:inputType="date"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:background="@drawable/inputs"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="141dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textColor="#ffffff"
            android:layout_marginBottom="20dp"
            android:background="@drawable/roundend_button"
            tools:layout_editor_absoluteX="113dp"
            tools:layout_editor_absoluteY="437dp" />

        <Button
            android:id="@+id/crear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear cuenta"
            android:textColor="#ffffff"
            android:layout_marginBottom="20dp"
            android:padding="15dp"
            android:background="@drawable/roundend_button"
            tools:layout_editor_absoluteX="113dp"
            tools:layout_editor_absoluteY="379dp" />



    </LinearLayout>
</ScrollView>

</android.support.constraint.ConstraintLayout>