<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterGamerActivity"
    tools:layout_editor_absoluteY="81dp"
    android:background="@drawable/background">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="MatchFinder"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="50dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Formulario de Reserva"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name_reserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@drawable/inputs"
                android:ems="10"
                android:hint="Nombre de Reseca"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="104dp" />

            <Button
            android:id="@+id/btn_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Fecha:"
                android:layout_marginBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/roundend_button"
            android:textColor="#ffffff"
            android:textSize="18dp"

            />

            <EditText
                android:id="@+id/label_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginBottom="20dp"
                android:inputType="textPersonName"
                android:textAlignment="center"
                />

            <Button
                android:id="@+id/btn_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Hora:"
                android:paddingLeft="20dp"
                android:layout_marginBottom="10dp"
                android:paddingRight="20dp"
                android:background="@drawable/roundend_button"
                android:textColor="#ffffff"
                android:textSize="18dp"

                />

            <EditText
                android:id="@+id/label_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginBottom="40dp"
                android:inputType="textPersonName"
                android:textAlignment="center"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reservar"
                android:textColor="#ffffff"
                android:text="Reservar"
                android:paddingLeft="20dp"
                android:textAlignment="center"
                android:paddingRight="20dp"
                android:background="@drawable/roundend_button"
                />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>